                        <!--                        <com.sattar.j.smsfake.tools.customViews.CustomEditText-->
                        <!--                            android:id="@+id/phone"-->
                        <!--                            android:textColor="@color/textColor"-->
                        <!--                            android:layout_width="match_parent"-->
