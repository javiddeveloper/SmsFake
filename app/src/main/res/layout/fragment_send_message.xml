                    <RadioGroup
                        android:id="@+id/radioGroup_verify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.sattar.j.smsfake.tools.customViews.CustomRadioButton
                            android:id="@+id/radio_verifyEmail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:gravity="right|center_vertical"
                            android:layoutDirection="rtl"
                            android:textColor="@color/textColor"
                            android:text="@string/receive"
                            app:buttonCompat="@null" />

                        <com.sattar.j.smsfake.tools.customViews.CustomRadioButton
                            android:id="@+id/radio_verifySms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:gravity="right|center_vertical"
                            android:layoutDirection="rtl"
                            android:text="@string/send"
                            android:textColor="@color/textColor"
                            app:buttonCompat="@null" />

                    </RadioGroup>

                        <com.sattar.j.smsfake.view.navigations.sendMessage.destination.CustomDestinationList
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:id="@+id/destList" />
