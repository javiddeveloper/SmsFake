                        <!--                            android:maxLines="1"-->
                        <!--                            app:styleFont="light"/>-->
                        <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_action"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="22dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_schedule"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                app:srcCompat="@drawable/ic_calendar_clock"
                                app:tint="@color/titleCatColor" />

                            <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12sp"
                            android:layout_toStartOf="@id/img_schedule"
                            android:text="@string/schedule"
                            android:textColor="@color/titleCatColor"
                            app:styleFont="light" />

                    </RelativeLayout>

                    <View
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:id="@+id/timeTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/time"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp"
                            app:styleFont="light" />

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textColor="@color/textColor"
                            android:text="@string/timeSend"
                            app:styleFont="light" />


                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:id="@+id/dateTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/date"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp"
                            app:styleFont="light" />

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"

                            android:textColor="@color/textColor"
                            android:text="@string/dateSend"
                            app:styleFont="light" />
                    </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spaceBottom"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/fab_send"
            android:clipToPadding="true"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.sattar.j.smsfake.tools.customViews.CustomEditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:background="@null"
                    android:textColor="@color/textColor"
                    android:padding="5dp"
                    android:hint="@string/messageText"
                    app:styleFont="light" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spaceBottom"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/colorAccent"
            app:backgroundTintMode="src_in"
            app:fabSize="mini"
            app:useCompatPadding="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/ic_send"
            app:tint="@color/white"
            tools:ignore="RelativeOverlap" />

        <Space
            android:id="@+id/spaceBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</layout>