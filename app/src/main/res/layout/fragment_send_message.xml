<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sattar.j.smsfake.tools.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:gravity="center"
                app:styleFont="medium"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_above="@+id/card_send"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.sattar.j.smsfake.tools.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22sp"
                        android:layout_marginRight="20sp"
                        android:text="@string/action_send"
                        android:textColor="@color/titleCatColor"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginStart="22sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="22sp"
                        android:background="@color/lineColor" />

                    <!-- <com.jaredrummler.materialspinner.MaterialSpinner-->
                    <!--     android:id="@+id/spinner"-->
                    <!--     android:layout_width="match_parent"-->
                    <!--     android:layout_height="wrap_content"-->
                    <!--     android:layout_marginLeft="20sp"-->
                    <!--     android:layout_marginTop="12sp"-->
                    <!--     android:layout_marginRight="20sp"-->
                    <!--     android:elevation="5dp"-->
                    <!--     app:ms_arrow_tint="@color/colorPrimary"-->
                    <!--     app:ms_background_color="#f1f1f1"-->
                    <!--     app:ms_hint="نوع ارسال"/>-->

                    <RadioGroup
                        android:id="@+id/radioGroup_verify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/radio_verifyEmail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:gravity="right|center_vertical"
                            android:layoutDirection="rtl"
                            android:textColor="@color/text_color"
                            android:text="@string/receive"
                            app:buttonCompat="@null" />

                        <RadioButton
                            android:id="@+id/radio_verifySms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                            android:gravity="right|center_vertical"
                            android:layoutDirection="rtl"
                            android:text="@string/send"
                            android:textColor="@color/text_color"
                            app:buttonCompat="@null" />

                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:textAlignment="textEnd"
                        android:textDirection="rtl" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <com.sattar.j.smsfake.tools.customViews.CustomEditText
                            android:id="@+id/phone"
                            android:textColor="@color/text_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/phoneOrName"
                            android:nextFocusDown="@id/message"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_date"
                android:layout_below="@+id/card_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:orientation="vertical">

                    <com.sattar.j.smsfake.tools.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12sp"
                        android:layout_marginBottom="12sp"
                        android:text="@string/schedule"
                        android:textColor="@color/titleCatColor"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:id="@+id/timeTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/time"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp" />

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:text="@string/timeSend" />


                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:id="@+id/dateTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/date"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp" />

                        <com.sattar.j.smsfake.tools.customViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"

                            android:textColor="@color/text_color"
                            android:text="@string/dateSend" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_danger_message"
                android:layout_below="@id/card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="26dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:orientation="horizontal">

                    <com.sattar.j.smsfake.tools.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="15sp"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/danger_message" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_send"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12sp"
        app:cardCornerRadius="35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginEnd="16dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/send">

                <com.sattar.j.smsfake.tools.customViews.CustomEditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:textColor="@color/text_color"
                    android:hint="@string/messageText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                app:backgroundTintMode="src_in"
                app:backgroundTint="@color/colorAccent"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic_send" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>