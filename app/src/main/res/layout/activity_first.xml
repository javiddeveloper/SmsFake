<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.FirstActivity">

    <com.sattar.j.smsfake.customViews.CustomImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.sattar.j.smsfake.customViews.CustomImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:elevation="15sp"
        android:scaleType="centerCrop"
        android:src="@drawable/sms_icon" />

    <com.sattar.j.smsfake.customViews.CustomTextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:elevation="15sp"
        android:text="پیامک تفلبی"
        android:textColor="#dbdbdb"
        android:textSize="35sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_marginTop="15sp"
        android:layout_height="100dp"
        android:layout_below="@+id/appName"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie/anim.json"
        app:lottie_loop="true" />

</RelativeLayout>