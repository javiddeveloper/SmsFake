<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="start"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:elevation="5dp"
                app:cardCornerRadius="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.sattar.j.smsfake.CustomViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12sp"
                        android:layout_marginTop="12sp"
                        android:text="@string/Sendtext" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginTop="12dp"
                        android:elevation="5dp"
                        app:ms_arrow_tint="@color/colorPrimary"
                        app:ms_background_color="#f1f1f1" />


                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12sp"
                        android:gravity="start"
                        app:mtf_animationDuration="100"
                        app:mtf_backgroundColor="@color/colorPrimary"
                        app:mtf_cardCollapsedHeight="3dp"
                        app:mtf_image="@android:drawable/ic_menu_call"
                        app:mtf_labelColor="@color/colorPrimary">

                        <com.sattar.j.smsfake.CustomViews.CustomEditText
                            android:id="@+id/sender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:hint="@string/phone"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="20"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                    </com.github.florent37.materialtextfield.MaterialTextField>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="5dp"
                app:cardCornerRadius="5sp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.sattar.j.smsfake.CustomViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12sp"
                        android:layout_marginRight="12sp"
                        android:layout_marginTop="12sp"
                        android:text="@string/schedule" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginStart="12sp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.sattar.j.smsfake.CustomViews.CustomTextView
                            android:id="@+id/timeTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="@string/time"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp" />

                        <com.sattar.j.smsfake.CustomViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/timeSend" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginStart="12sp"
                        android:background="@color/lineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.sattar.j.smsfake.CustomViews.CustomTextView
                            android:id="@+id/dateTxt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="@string/date"
                            android:textColor="@color/timeColor"
                            android:textSize="19dp" />

                        <com.sattar.j.smsfake.CustomViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/dateSend" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="5dp"
                app:cardCornerRadius="5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addContact"
                        style="@style/dialog_blue_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="52dp"

                        android:text="@string/contact" />

                    <Button
                        android:id="@+id/reset"
                        style="@style/dialog_blue_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="75dp"
                        android:text="@string/reset" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="5dp"
                app:cardCornerRadius="5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:orientation="horizontal">

                    <com.sattar.j.smsfake.CustomViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="15sp"
                        android:gravity="center"
                        android:text="کاربر گرامی پیامک های ساخته شده توسط این برنامه برای کسی ارسال نمیشود و فقط در صندوق پیامهای شما نمایش داده میشود." />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="12sp"
                android:layout_marginTop="12sp"
                android:elevation="15sp"
                app:cardCornerRadius="12sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15sp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginStart="12sp"
                        android:layout_weight="2"
                        android:gravity="center"
                        app:mtf_animationDuration="100"
                        app:mtf_backgroundColor="@color/colorPrimary"
                        app:mtf_cardCollapsedHeight="3dp"
                        app:mtf_image="@android:drawable/ic_dialog_email"
                        app:mtf_labelColor="@color/colorPrimary">

                        <com.sattar.j.smsfake.CustomViews.CustomEditText
                            android:id="@+id/body"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="start"
                            android:hint="@string/messageText"
                            android:inputType="text"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                    </com.github.florent37.materialtextfield.MaterialTextField>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/send"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15sp"
                        android:src="@drawable/send" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>